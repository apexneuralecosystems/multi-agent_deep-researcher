# Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# API Keys (Required)
LINKUP_API_KEY=your_linkup_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# CORS Configuration (Required)
# Comma-separated list of allowed origins (frontend URLs)
# For production, include your production frontend URL
# For development, include http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,https://researcherai.apexneural.cloud

# Trusted Hosts (Optional - defaults to localhost, 127.0.0.1)
# Comma-separated list of trusted hostnames
# Include your backend domain for production
ALLOWED_HOSTS=localhost,127.0.0.1,researcherai-api.apexneural.cloud

# Optional: OpenRouter Model Selection
# OPENROUTER_MODEL=openai/gpt-4o-mini
